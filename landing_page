    <script>
        function showCategory(category) {
            // Hide all categories
            const categories = ['ollas', 'calentadores', 'refrigeracion'];
            categories.forEach(cat => {
                document.getElementById(`category-${cat}`).classList.add('hidden');
                document.getElementById(`tab-${cat}`).classList.remove('bg-turquoise', 'text-white');
                document.getElementById(`tab-${cat}`).classList.add('text-gray-600', 'hover:text-turquoise');
            });
            
            // Show selected category
            document.getElementById(`category-${category}`).classList.remove('hidden');
            document.getElementById(`tab-${category}`).classList.add('bg-turquoise', 'text-white');
            document.getElementById(`tab-${category}`).classList.remove('text-gray-600', 'hover:text-turquoise');
        }

        function scrollToProducts() {
            document.getElementById('productos').scrollIntoView({ behavior: 'smooth' });
        }

        function contactWhatsApp(product) {
            const phoneNumber = '+5353447475'; // Reemplaza con tu n√∫mero de WhatsApp
            const message = `Hola! Me interesa obtener informaci√≥n sobre: ${product}`;
            const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
            window.open(whatsappUrl, '_blank', 'noopener,noreferrer');
        }

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
    </script>
